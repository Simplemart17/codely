    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-react": "^0.525.0",
    "monaco-editor": "^0.52.2",
    "next": "15.3.4",
    "prisma": "^6.10.1",
    "react": "^19.0.0",
    "react-dom": "^19.0.0",
    "tailwind-merge": "^3.3.1",
    "y-monaco": "^0.1.6",
    "y-protocols": "^1.0.6",
    "y-websocket": "^3.0.0",
